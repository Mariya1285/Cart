<%if OrderItem.all.count != 0%>
<h1>OrderItems</h1>
<table class="table">
  <thead>
    <tr>
      <th>Order Id</th>
      <th>Product Name</th>
      <th>Product Image</th>
      <th>Price</th>
      <th>Quantity</th>
      
    </tr>
  </thead>
 <tbody>
  <% @total_cost = 0 %>
  <% @order_item.each do |order| %>
    
    <%if order.order_id == params[:order_id].to_i%>
      <% @product = Product.find(order.product_id)%>
      <tr>
        <td><%=order.order_id %></td>
        <td><%=@product.name %></td>
        <td><%= image_tag @product.img.url %></td>
        <td><%=order.price %></td>
        <td><%=order.quantity %></td>
      </tr>
    <% end %>
    
  <% end %>
<tbody>
</table>

<% end %>