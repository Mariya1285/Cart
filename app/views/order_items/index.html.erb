<%if OrderItem.all.count != 0%>
<h1>OrderItems</h1>
<table class="table">
  <thead>
    <tr>
      <th>Order Id</th>
      <th>Product Id</th>
      <th>Price</th>
      <th>Quantity</th>
      
    </tr>
  </thead>
 <tbody>
  <% @order_item.each do |order| %>
    
    <%if order.order_id == params[:order_id].to_i%>
      
      <tr>
        <td><%=order.order_id %></td>
        <td><%=order.product_id %></td>
        <td><%=order.price %></td>
        <td><%=order.quantity %></td>
        
       
          
        
      </tr>
    <% end %>
  <% end %>
<tbody>
</table>

<% end %>