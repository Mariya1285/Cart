<h2>Sign up</h2>

<%= form_tag(user_registration_path,:method => 'post') %>
<%= devise_error_messages! %>
<table>

<tr>
<td>Username : </td>
<td><%=text_field_tag "user[username]",@user.username %></td>
</tr>

<tr>
<td>Age : </td>
<td><%=text_field_tag "user[age]" ,@user.age %></td>
</tr>

<tr>
<td>Mobile : </td>
<td><%=text_field_tag "user[mobile]" ,@user.mobile %></td>
</tr>

<tr>
<td>Country : </td>
<td><%=text_field_tag "user[country]" ,@user.country %></td>
</tr>

<tr>
<td>Address : </td>
<td><%=text_area_tag "user[address]" ,@user.address ,:rows => 10, :cols => 25 %></td>
</tr>

<tr>
<td>Postal Code : </td>
<td><%=text_field_tag "user[postal_code]" ,@user.postal_code %></td>
</tr>

<tr>
<td>Email : </td>
<td><%=email_field_tag "user[email]",@user.email %></td>
</tr>

<tr>
<td>Password : </td>
<td><%=password_field_tag "user[password]",@user.password %></td>
</tr>

<tr>
<td>Retype password : </td>
<td><%=password_field_tag "user[password_confirmation]",@user.password_confirmation %></td>
</tr>


<tr>
<td><%= submit_tag nil, :class => "form_submit"%></td>
</tr>
</table>
<br />
<%= render :partial => "devise/shared/links" %>