<%= form_for(@product, html: {:multipart => true  }) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  
  <p>
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </p>
 
  <p>
    <%= f.label :img %><br>
    <%= f.file_field :img %>
  </p>
  <p>
    <%= f.label :category %><br>

 <%= f.select :categories, (Category.all.map { |category| [category.name, category.id] }), include_blank: true %>

</p>
  </p>
  <p>
  
    <%= f.submit %>
  </p>
<% end %>